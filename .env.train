# ===== Mongo (訓練資料庫) =====
MONGO_URI=mongodb://localhost:27017
DB_NAME=webcommentIT_train
COLLECTION=comment_train

# ===== 模式與訓練友善開關 =====
MODE_COMMENTS=train           # 本檔給 train 用
INCLUDE_POSTS=0               # 只收評論，不收貼文
REQUIRE_TOP_CLASS=1           # 必須命中 A01~A10 才收
MIN_SCORE_TO_INSERT=2         # 最低優先分數（再過濾雜訊）

# 偏好命中取樣（train 模式）
TRAIN_BIAS_KEEP_IF_HIT=1      # 命中類別必收
TRAIN_BIAS_PROB_NO_HIT=0.2    # 未命中類別時保留機率 (0~1，越小越嚴)
TRAIN_COMMENT_MAX_PER_THREAD=80
TRAIN_COMMENT_SAMPLE_PROB=0.7
TRAIN_REQUIRE_MIN_SCORE=1

# ===== 嚴格配額（超過就不收）=====
STRICT_QUOTA=1

